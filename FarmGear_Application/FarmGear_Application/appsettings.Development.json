{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=FarmGearDevDb;User=root;Password=123456;",
    "Redis": "localhost:6379"
  },
  "ApplicationSettings": {
    "ApplicationUrl": "https://localhost:7250",
    "FileStorage": {
      "Provider": "Local",
      "BaseUrl": "https://localhost:7250/uploads"
    }
  },
  "RedisSettings": {
    "ConnectionString": "localhost:6379",
    "DatabaseId": 0,
    "DefaultExpirationMinutes": 30
  },
  "JwtSettings": {
    "SecretKey": "development-secret-key-for-testing-only-32-chars",
    "ExpiryInMinutes": 480
  },
  "EmailSettings": {
    "Provider": "SMTP",
    "SMTP": {
      "Server": "localhost",
      "Port": 1025,
      "UseSsl": false,
      "Username": "",
      "Password": ""
    }
  },
  "Alipay": {
    "Environment": "Sandbox",
    "AppId": "FAKE_DEV_APP_ID",
    "MerchantPrivateKey": "FAKE_DEV_PRIVATE_KEY",
    "AlipayPublicKey": "FAKE_DEV_PUBLIC_KEY",
    "NotifyUrl": "https://localhost:7250/api/payment/callback",
    "GatewayUrl": "https://openapi.alipaydev.com/gateway.do"
  },
  "HealthCheck": {
    "Enabled": true,
    "Database": {
      "Enabled": true,
      "TimeoutSeconds": 10
    },
    "Redis": {
      "Enabled": true,
      "TimeoutSeconds": 5,
      "PingThresholdMs": 500,
      "EnableDetailedCheck": true
    },
    "Storage": {
      "Enabled": true,
      "Type": "Local",
      "MinFreeSpaceGB": 1,
      "WarningThresholdGB": 5
    },
    "Endpoints": {
      "EnableDetailedResponse": true,
      "HideSensitiveDataInProduction": false
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Warning",
      "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Warning",
      "FarmGear_Application": "Information",
      "FarmGear_Application.Services.OrderExpirationService": "Information"
    }
  }
} 